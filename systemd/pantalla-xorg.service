[Unit]
Description=Pantalla_reloj Xorg server (:0, vt7)
After=systemd-user-sessions.service
Wants=pantalla-openbox@__KIOSK_USER__.service
PartOf=pantalla-session.target

[Service]
Type=simple
TTYPath=/dev/tty7
ExecStart=/usr/lib/xorg/Xorg :0 -verbose 3 -nolisten tcp -background none vt7
Restart=always
RestartSec=2

[Install]
WantedBy=pantalla-session.target
