{
  "version": 2,
  "ui_map": {
    "engine": "maplibre",
    "provider": "xyz",
    "xyz": {
      "urlTemplate": "https://services.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}",
      "attribution": "Â© Esri, Maxar, Earthstar, CNES/Airbus, USDA, USGS, IGN, GIS User Community",
      "minzoom": 0,
      "maxzoom": 19,
      "tileSize": 256
    },
    "labelsOverlay": {
      "enabled": true,
      "style": "carto-only-labels"
    },
    "viewMode": "fixed",
    "fixed": {
      "center": { "lat": 39.98, "lon": 0.20 },
      "zoom": 7.8,
      "bearing": 0,
      "pitch": 0
    },
    "region": { "postalCode": "12001" }
  },
  "ui_global": {
    "satellite": { "enabled": true, "provider": "gibs", "opacity": 1.0 },
    "radar": { "enabled": false, "provider": "rainviewer" }
  },
  "layers": {
    "flights": {
      "enabled": true,
      "provider": "opensky",
      "refresh_seconds": 12,
      "max_age_seconds": 120,
      "max_items_global": 2000,
      "max_items_view": 1500,
      "rate_limit_per_min": 6,
      "decimate": "none",
      "grid_px": 24,
      "styleScale": 3.2,
      "render_mode": "circle",
      "circle": {
        "radius_base": 7.5,
        "radius_zoom_scale": 1.7,
        "opacity": 1.0,
        "color": "#FFD400",
        "stroke_color": "#000000",
        "stroke_width": 2.0
      }
    },
    "ships": {
      "enabled": false,
      "provider": "aisstream",
      "refresh_seconds": 10,
      "max_age_seconds": 180,
      "max_items_global": 1500,
      "max_items_view": 420,
      "decimate": "grid",
      "grid_px": 24,
      "styleScale": 1.4
    }
  },
  "panels": {
    "weatherWeekly": { "enabled": true },
    "ephemerides": { "enabled": true },
    "news": { "enabled": true, "feeds": [] },
    "calendar": { "enabled": true }
  }
}
