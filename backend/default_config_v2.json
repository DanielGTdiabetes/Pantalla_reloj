{
  "version": 2,
  "display": {
    "timezone": "Europe/Madrid"
  },
  "ui_map": {
    "engine": "maplibre",
    "provider": "local_raster_xyz",
    "renderWorldCopies": true,
    "interactive": false,
    "controls": false,
    "labelsOverlay": {
      "enabled": true,
      "style": "carto-only-labels"
    },
    "local": {
      "tileUrl": "https://tile.openstreetmap.org/{z}/{x}/{y}.png",
      "minzoom": 0,
      "maxzoom": 19
    },
    "maptiler": {
      "apiKey": null,
      "styleUrl": null
    },
    "customXyz": {
      "tileUrl": null,
      "minzoom": 0,
      "maxzoom": 19
    },
    "viewMode": "fixed",
    "fixed": {
      "center": { "lat": 39.98, "lon": 0.20 },
      "zoom": 9.0,
      "bearing": 0,
      "pitch": 0
    },
    "region": { "postalCode": "12001" }
  },
  "ui_global": {
    "satellite": { "enabled": true, "provider": "gibs", "opacity": 1.0 },
    "radar": { "enabled": false, "provider": "rainviewer" },
    "overlay": {
      "rotator": {
        "enabled": true,
        "order": ["clock", "weather", "astronomy", "santoral", "calendar", "news"],
        "durations_sec": {
          "clock": 10,
          "weather": 12,
          "astronomy": 10,
          "santoral": 8,
          "calendar": 12,
          "news": 12
        },
        "transition_ms": 400,
        "pause_on_alert": false
      }
    }
  },
  "layers": {
    "flights": {
      "enabled": true,
      "provider": "opensky",
      "refresh_seconds": 12,
      "max_age_seconds": 120,
      "max_items_global": 2000,
      "max_items_view": 1500,
      "rate_limit_per_min": 6,
      "decimate": "none",
      "grid_px": 24,
      "styleScale": 3.2,
      "render_mode": "symbol_custom",
      "circle": {
        "radius_base": 7.5,
        "radius_zoom_scale": 1.7,
        "opacity": 1.0,
        "color": "#FFD400",
        "stroke_color": "#000000",
        "stroke_width": 2.0
      }
    },
    "ships": {
      "enabled": false,
      "provider": "aisstream",
      "refresh_seconds": 10,
      "max_age_seconds": 180,
      "max_items_global": 1500,
      "max_items_view": 420,
      "decimate": "grid",
      "grid_px": 24,
      "styleScale": 1.4,
      "render_mode": "symbol_custom"
    }
  },
  "panels": {
    "weatherWeekly": { "enabled": true },
    "ephemerides": { "enabled": true },
    "news": { "enabled": true, "feeds": [] },
    "calendar": { "enabled": true },
    "historicalEvents": {
      "enabled": true,
      "provider": "wikimedia",
      "wikimedia": {
        "language": "es",
        "event_type": "all",
        "api_user_agent": "PantallaReloj/1.0 (https://github.com/DanielGTdiabetes/Pantalla_reloj; contact@example.com)",
        "max_items": 10,
        "timeout_seconds": 10
      },
      "rotation_seconds": 6,
      "max_items": 5
    }
  },
  "secrets": {
    "google": {
      "api_key": null,
      "calendar_id": null
    },
    "aemet": {
      "api_key": null
    },
    "ics": {
      "url": null,
      "path": null
    }
  }
}
