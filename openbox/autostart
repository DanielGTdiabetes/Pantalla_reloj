#!/bin/sh

# Desactivar ahorro de energía y salvapantallas
xset -dpms || true
xset s off || true
xset s noblank || true

# Rotar la pantalla principal 90° a la izquierda
XR_OUT="$(xrandr --query 2>/dev/null | awk '/ connected/{print $1; exit}')"
if [ -n "$XR_OUT" ]; then
  xrandr --output "$XR_OUT" --rotate left --primary || true
fi
